{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": ["put", "options"],
      "route": "updateTask/{id}"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "blob",
      "direction": "in",
      "name": "tasksBlob",
      "path": "tasks/tasks.json",
      "connection": "AzureWebJobsStorage"
    }
  ]
}
